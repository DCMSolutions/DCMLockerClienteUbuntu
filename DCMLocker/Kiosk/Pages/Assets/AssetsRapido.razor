    async Task ProceedDevolucion()
    {
        var box = CurrentBox;
        if (box <= 0) return;

        _devolEstadoElegido = _devolEstado;

        _loadingText = "Procesando devolución…";
        _screen = Screen.Loading;
        StateHasChanged();

        try
        {
            await Cliente.OpenBoxByFisico(box);

            // Cerraduras NO conectadas: flujo viejo (sin verificación)
            if (!_cerradurasConectadas)
            {
                // Solo reportamos evento si tenemos IdAsset (admin/mantenimiento).
                if (_selectedAsset != null && !string.IsNullOrWhiteSpace(_rfid))
                {
                    var evt = new AssetsEventoLocker
                    {
                        IdAsset = _selectedAsset.IdAsset,
                        IdEmpleado = _rfid!,
                        Box = box,
                        Evento = AssetsEvento.CheckIn,
                        EstadoNuevo = _devolEstadoElegido,
                        FechaEvento = DateTime.Now
                    };
                    await Cliente.ReportEvento(evt);
                }

                ShowSuccess($"Puerta {box} abierta.",
                            "Por favor, al terminar cierre la puerta. Gracias",
                            _cfg2.TimeOperacionExitosa);
                return;
            }

            // Cerraduras conectadas: verificación por sensores
            _boxEnVerificacion = box;

            ShowResult(
                success: true,
                title: $"Puerta {box} abierta.",
                subtitle: "Por favor, al terminar cierre la puerta. Gracias",
                durationMs: _cfg2.TimeOperacionExitosa,
                onFinished: async () => await VerificarDespuesDePuertaAbiertaAsync()
            );
        }
        catch
        {
            ShowError("Error al procesar ingreso",
                      "Por favor, intente nuevamente o comuníquese con el administrador.",
                      _cfg2.TimeOperacionCancelada);
        }
    }

    // --- Verificación de sensores / puertas (idéntica lógica, sin depender de _selectedAsset) ---
    private async Task VerificarDespuesDePuertaAbiertaAsync()
    {
        if (_boxEnVerificacion == null)
        {
            ShowError("Operación fallida",
                      "No se pudo verificar el estado del box.",
                      _cfg2.TimeOperacionCancelada);
            return;
        }

        if (!_cerradurasConectadas)
            return;

        BoxStatusDto? status;
        try
        {
            status = await Cliente.GetBoxStatusPorId(_boxEnVerificacion.Value);
        }
        catch
        {
            ShowError("Operación fallida",
                      "No se pudo obtener el estado del box.",
                      _cfg2.TimeOperacionCancelada);
            return;
        }

        if (status == null)
        {
            ShowError("Operación fallida",
                      "No se pudo encontrar el box.",
                      _cfg2.TimeOperacionCancelada);
            return;
        }

        bool puertaCerrada = status.Puerta;   // true = cerrada
        bool ocupado = status.Ocupacion;      // true = algo adentro
        var accionActual = _accion ?? AssetsAccion.None;

        if (puertaCerrada)
        {
            if (accionActual == AssetsAccion.Retiro)
            {
                if (!ocupado) await RegistrarYMostrarExitoFinalAsync();
                else ShowError("Operación fallida", "El asset no fue retirado.", _cfg2.TimeOperacionCancelada);
            }
            else if (accionActual == AssetsAccion.Devolucion)
            {
                if (ocupado) await RegistrarYMostrarExitoFinalAsync();
                else ShowError("Operación fallida", "El asset no fue devuelto.", _cfg2.TimeOperacionCancelada);
            }
            else
            {
                ShowError("Operación fallida", "Operación desconocida.", _cfg2.TimeOperacionCancelada);
            }
        }
        else
        {
            await MostrarPantallaPuertasAbiertasYMonitorearAsync();
        }
    }

    private async Task MostrarPantallaPuertasAbiertasYMonitorearAsync()
    {
        _puertasAbiertasCts?.Cancel();
        _puertasAbiertasCts = new CancellationTokenSource();

        _screen = Screen.PuertasAbiertas;
        await InvokeAsync(StateHasChanged);

        _ = MonitorPuertasAbiertasAsync(_puertasAbiertasCts.Token);
    }

    private async Task MonitorPuertasAbiertasAsync(CancellationToken token)
    {
        while (!token.IsCancellationRequested)
        {
            if (!_cerradurasConectadas)
                return;

            List<BoxPuertaDTO> estados;
            try
            {
                estados = await Cliente.GetAllBoxStatus();
            }
            catch
            {
                await InvokeAsync(() => ShowError("Operación fallida",
                                                  "No se pudo obtener el estado de las puertas.",
                                                  _cfg2.TimeOperacionCancelada));
                return;
            }

            var abiertas = estados
                .Where(b => !b.Puerta)
                .Select(b => b.IdBox)
                .OrderBy(x => x)
                .ToList();

            await InvokeAsync(() =>
            {
                _puertasAbiertas = abiertas;
                StateHasChanged();
            });

            if (abiertas.Count == 0) break;

            try { await Task.Delay(_puertasPollMs, token); }
            catch { return; }
        }

        if (!token.IsCancellationRequested)
        {
            await InvokeAsync(async () => await VerificarBoxAlCerrarAsync());
        }
    }

    private async Task VerificarBoxAlCerrarAsync()
    {
        if (_boxEnVerificacion == null)
        {
            ShowError("Operación fallida",
                      "No se pudo verificar el estado del box.",
                      _cfg2.TimeOperacionCancelada);
            return;
        }

        if (!_cerradurasConectadas)
            return;

        BoxStatusDto? status;
        try
        {
            status = await Cliente.GetBoxStatusPorId(_boxEnVerificacion.Value);
        }
        catch
        {
            ShowError("Operación fallida",
                      "No se pudo obtener el estado del box.",
                      _cfg2.TimeOperacionCancelada);
            return;
        }

        if (status == null)
        {
            ShowError("Operación fallida",
                      "No se pudo encontrar el box.",
                      _cfg2.TimeOperacionCancelada);
            return;
        }

        bool puertaCerrada = status.Puerta;
        bool ocupado = status.Ocupacion;
        var accionActual = _accion ?? AssetsAccion.None;

        if (!puertaCerrada)
        {
            await MostrarPantallaPuertasAbiertasYMonitorearAsync();
            return;
        }

        if (accionActual == AssetsAccion.Retiro)
        {
            if (!ocupado) await RegistrarYMostrarExitoFinalAsync();
            else ShowError("Operación fallida", "El asset no fue retirado.", _cfg2.TimeOperacionCancelada);
        }
        else if (accionActual == AssetsAccion.Devolucion)
        {
            if (ocupado) await RegistrarYMostrarExitoFinalAsync();
            else ShowError("Operación fallida", "El asset no fue devuelto.", _cfg2.TimeOperacionCancelada);
        }
        else
        {
            ShowError("Operación fallida", "Operación desconocida.", _cfg2.TimeOperacionCancelada);
        }
    }

    private async Task RegistrarYMostrarExitoFinalAsync()
    {
        if (string.IsNullOrWhiteSpace(_rfid))
        {
            ShowError("Operación fallida",
                      "No se pudo registrar la operación.",
                      _cfg2.TimeOperacionCancelada);
            return;
        }

        var accionActual = _accion ?? AssetsAccion.None;

        try
        {
            // Nota: en modo rápido no tengo idasset asi que no puedo loguear
            if (_selectedAsset != null)
            {
                if (accionActual == AssetsAccion.Retiro)
                {
                    var evt = new AssetsEventoLocker
                    {
                        IdAsset = _selectedAsset.IdAsset,
                        IdEmpleado = _rfid!,
                        Evento = AssetsEvento.CheckOut,
                        FechaEvento = DateTime.Now
                    };
                    await Cliente.ReportEvento(evt);
                }
                else if (accionActual == AssetsAccion.Devolucion)
                {
                    var evt = new AssetsEventoLocker
                    {
                        IdAsset = _selectedAsset.IdAsset,
                        IdEmpleado = _rfid!,
                        Box = _selectedAsset.IdBox,
                        Evento = AssetsEvento.CheckIn,
                        EstadoNuevo = _devolEstadoElegido,
                        FechaEvento = DateTime.Now
                    };
                    await Cliente.ReportEvento(evt);
                }
            }
        }
        catch
        {
            // silencioso: de cara al usuario la operación fue correcta
        }

        ShowSuccess("Operación exitosa", null, _cfg2.TimeOperacionExitosa);
    }

